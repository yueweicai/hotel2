<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orilore.mapper.CompanyMapper">
	<select id="selectOne" resultType="Company">
		select * from company where id=1
	</select>
	<update id="update" parameterType="Company">
		update company set 
		name=#{name},money=#{money},phone=#{phone},
		tel=#{tel},co=#{co},addr=#{addr},hot=#{hot},
		wifi=#{wifi},tv=#{tv},air=#{air},fcar=#{fcar},info=#{info}
	</update>
	<update id="updateImage" parameterType="Company">
		update company set 
		<if test="pica!=null">
			pica=#{pica},
		</if>
		<if test="picb!=null">
			picb=#{picb},
		</if>
		<if test="picc!=null">
			picc=#{picc},
		</if>
		<if test="picd!=null">
			picd=#{picd},
		</if>
		<if test="pice!=null">
			pice=#{pice},
		</if>
		<if test="picf!=null">
			picf=#{picf},
		</if>
		id=1
	</update>
</mapper>